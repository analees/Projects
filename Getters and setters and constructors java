		System.out.println(employ2.getlname()+ ", " + employ2.getfname() + ", " + employ2.getempID() + ", works as a " + employ2.getfunc() + " in "+ employ2.getdpt() + " and has the following email address: " +
				employ2.getempEmail() + ".");
		
		//stores the data for employ3
		
		employ3.setfname("Jodi");
		employ3.setlname("Hearns");
