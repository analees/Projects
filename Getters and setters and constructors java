package asg2sp23;

public class Employee {
	
//main method 
	
	public static void main(String[] a) {
		//three employee objects (emplpoy1, employ2 and employ 3) which creates 3 new instances for the Employee class 
		Employee employ1 = new Employee();
		Employee employ2 = new Employee();
		Employee employ3 = new Employee();
		Employee employ4 = new Employee();
		Employee employ5 = new Employee();
		
		 //stores the data for employ1
		
		employ1.setfname("Cherianne");
		employ1.setlname("Newey");
		employ1.setempID(419553081);
		employ1.setdpt("Marketing");
		employ1.setfunc("Senior Developer");
		employ1.setempEmail("cnewey0@company.com");
		
		// prints the data for employ1 in required format
		
		System.out.println(employ1.getlname()+ ", " + employ1.getfname() + ", " + employ1.getempID() + ", works as a " + employ1.getfunc() + " in "+ employ1.getdpt() + " and has the following email address: " +
		employ1.getempEmail()+ ".");
		
		//stores the data for employ2
		
		employ2.setfname("Benita");
